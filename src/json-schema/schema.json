{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "IApi1": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "number"
        },
        "hobby": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "age",
        "hobby",
        "name"
      ]
    },
    "IApi2": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "job": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "job"
      ]
    }
  },
  "$id": "/api"
}